        gainNode.gain.linearRampToValueAtTime(0, audioContext.currentTime + 10);
        
        oscillator.start(audioContext.currentTime);
        oscillator.stop(audioContext.currentTime + 10);
        
        // 10ç§’å¾Œã«å†åº¦å†ç”Ÿ
        setTimeout(() => {
          if (!isMuted) sounds.ambient();
